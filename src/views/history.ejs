<!DOCTYPE html>
<html lang="ja">

<head>
    <meta charset="UTF-8">
    <title>交換履歴</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container text-center mt-4" style="width: 50%;">
        <div class="mb-4">
            <h1 class="text-primary">交換履歴</h1>
        </div>
        <div class="d-flex justify-content-center gap-3 mb-4">
            <a href="/" class="btn btn-secondary">ホームに戻る</a>
            <form id="clearForm" method="post" action="/api/clear">
                <button type="submit" class="btn btn-danger">全クリア</button>
            </form>
        </div>
        <div class="card">
            <div class="card-body">
                <% if (history && history.length > 0) { %>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>タイトル</th>
                                <th>種類</th>
                                <th>交換日</th>
                                <th>使用日数</th>
                                <th>個別</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% history.forEach(function(h) { %>
                                <tr>
                                    <td class="fw-bold"><%= h.title %></td>
                                    <td><%= h.type %></td>
                                    <td><%= h.date %></td>
                                    <td>
                                        <% if (typeof h.usedDays === 'number') { %>
                                            <%= h.usedDays %>日
                                        <% } else { %>
                                            -
                                        <% } %>
                                    </td>
                                    <td>
                                        <form method="post" action="/api/history/<%= h.id %>" style="display:inline;">
                                            <input type="hidden" name="id" value="<%= h.id %>">
                                            <button type="submit" class="btn btn-sm btn-danger">クリア</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                <% } else { %>
                    <div class="alert alert-info">履歴はありません</div>
                <% } %>
            </div>
        </div>
    </div>
</body>

</html>