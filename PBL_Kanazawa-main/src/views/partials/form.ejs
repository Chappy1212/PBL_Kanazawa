<form id="reminderForm" action="<%= formAction %>" method="POST" class="text-center" style="max-width: 200px; margin: 0 auto;">
    <div class="mb-3 text-center">
        <label for="title" class="form-label">タイトル</label>
    <input type="text" id="title" name="title" class="form-control text-start" value="<%= title %>" required>
    </div>
    <div class="mb-3 text-center">
        <label for="date" class="form-label">装着日</label>
    <input type="date" id="date" name="date" class="form-control text-start" required value="<%= date %>">
    </div>
    <div class="mb-3 text-center">
        <label for="type" class="form-label">種類</label>
    <select id="type" name="type" class="form-select text-start" required>
            <option value="1day" <%= type === '1day' ? 'selected' : '' %>>1day</option>
            <option value="2week" <%= type === '2week' ? 'selected' : '' %>>2week</option>
            <option value="1month" <%= type === '1month' ? 'selected' : '' %>>1month</option>
        </select>
    </div>
    <div class="mb-3 text-center">
        <label for="stock" class="form-label">在庫セット数</label>
    <input type="number" id="stock" name="stock" class="form-control text-start" min="1" value="<%= stock %>" required>
    </div>
    <div class="mb-3 text-center">
        <label for="removeTime" class="form-label">外す時間</label>
    <input type="time" id="removeTime" name="removeTime" class="form-control text-start" required value="<%= removeTime %>">
    </div>
    <button type="submit" id="reminderSubmit" class="btn btn-success w-100">登録</button>
</form>
