{
  "name": "hello-world",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "tsx src/main.ts",
    "build": "tsup src/main.ts && cp -r src/views dist/ && mkdir -p dist/db && cp src/db/*.json dist/db/",
    "start": "node dist/main.js",
    "lint": "eslint . --ext .ts,.tsx,.js,.mjs --fix",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.mjs",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest --runInBand",
    "test:e2e": "jest --runInBand -c tests/jest.config.js",
    "db:init": "tsx src/db/init.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "express": "^4.19.2",
    "pg": "^8.12.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^7.1.2"
  }
}